{
  "$schema": "http://json-schema.org/schema#",
  "$id": "http://sudomoin-pavel-project-mesto.tk/schemas/user.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "about": {
      "type": "string",
      "minLength": 2,
      "maxLength": 30
    },
    "avatar": {
      "type": "string",
      "format": "url"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 8
    }
  },
  "required": ["name", "about", "avatar", "email", "password"],
  "additionalProperties": false
}